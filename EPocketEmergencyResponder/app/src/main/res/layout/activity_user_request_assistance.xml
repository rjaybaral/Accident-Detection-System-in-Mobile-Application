<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/s4"
    tools:context=".UserRequestAssistanceActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
            android:background="@color/s4"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                app:cardBackgroundColor="@color/s4"
                app:cardCornerRadius="25dp"
                app:cardElevation="0dp">

                <ImageView
                    android:id="@+id/back_button"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="?android:selectableItemBackground"
                    android:clickable="true"
                    android:padding="7dp"
                    android:src="@drawable/arrow_back"
                    app:tint="@color/s1" />
            </androidx.cardview.widget.CardView>
            <TextView
                android:textColor="@color/white"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:textSize="18sp"
                android:layout_marginTop="2.5dp"
                android:layout_marginLeft="20dp"
                android:maxLines="1"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:text="User Assistance List"
                />
            <ImageView
                android:layout_marginRight="5dp"
                android:id="@+id/distance_sort_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="?android:selectableItemBackground"
                android:clickable="true"
                android:padding="9dp"
                android:src="@drawable/sort_distance"
                app:tint="@color/s1"  />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#3C3C3C"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:background="@color/s3"
            android:paddingBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/recyclerView"
            tools:listitem="@layout/layout_user_assistance_list"
            />
    </LinearLayout>
</RelativeLayout>