<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Authentication.RegisterActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        android:scrollbarThumbVertical="@null">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="30dp"
                android:fontFamily="@font/poppins_bold"
                android:maxLines="1"
                android:text="New account"
                android:textColor="@color/primary_pink"
                android:textSize="25dp" />

            <ImageView
                android:id="@+id/pictureBtn"
                android:layout_width="37dp"
                android:layout_height="37dp"
                android:layout_gravity="right"
                android:layout_marginTop="-23dp"
                android:layout_marginRight="56dp"
                android:src="@drawable/camera_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="25dp"
                android:fontFamily="@font/poppins_bold"
                android:maxLines="1"
                android:text="Upload Picture"
                android:textColor="@color/black"
                android:textSize="13dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12.5dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/poppins_bold"
                        android:maxLines="1"
                        android:text="FIRST NAME"
                        android:textColor="@color/black"
                        android:textSize="13dp" />

                    <EditText
                        android:id="@+id/firstname_text"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/bg_gray_round"
                        android:fontFamily="@font/poppins_bold"
                        android:inputType="textCapWords"
                        android:maxLines="1"
                        android:paddingLeft="25dp"
                        android:paddingRight="25dp"
                        android:text=""
                        android:textSize="14sp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12.5dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/poppins_bold"
                        android:maxLines="1"
                        android:text="LAST NAME"
                        android:textColor="@color/black"
                        android:textSize="13dp" />

                    <EditText
                        android:id="@+id/lastname_text"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/bg_gray_round"
                        android:fontFamily="@font/poppins_bold"

                        android:inputType="textCapWords"
                        android:maxLines="1"
                        android:paddingLeft="25dp"
                        android:paddingRight="25dp"
                        android:text=""
                        android:textSize="14sp" />


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="25dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_bold"
                    android:maxLines="1"
                    android:text="BIRTHDAY"
                    android:textColor="@color/black"
                    android:textSize="13dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/birthday_text"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/bg_gray_round"
                        android:fontFamily="@font/poppins_bold"
                        android:gravity="center_vertical"
                        android:inputType="textCapWords"
                        android:maxLines="1"
                        android:paddingLeft="25dp"
                        android:paddingRight="25dp"
                        android:text=""
                        android:textColor="#202020"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/r1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dp"
                        android:padding="4dp"
                        android:src="@drawable/calendar_icon" />
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="25dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_bold"
                    android:maxLines="1"
                    android:text="COMPLETE ADDRESS"
                    android:textColor="@color/black"
                    android:textSize="13dp" />

                <EditText
                    android:id="@+id/address_text"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/bg_gray_round"
                    android:fontFamily="@font/poppins_bold"
                    android:inputType="textCapWords"
                    android:maxLines="1"
                    android:paddingLeft="25dp"
                    android:paddingRight="25dp"
                    android:text=""
                    android:textSize="14sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="25dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12.5dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:fontFamily="@font/poppins_bold"
                        android:maxLines="1"
                        android:text="CONTACT NO"
                        android:textColor="@color/black"
                        android:textSize="13dp" />

                    <EditText
                        android:id="@+id/contact_text"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/bg_gray_round"
                        android:fontFamily="@font/poppins_bold"
                        android:inputType="number"
                        android:maxLines="1"
                        android:paddingLeft="25dp"
                        android:paddingRight="25dp"
                        android:text=""
                        android:textSize="14sp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12.5dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_bold"
                        android:maxLines="1"
                        android:text="GENDER"
                        android:textColor="@color/black"
                        android:textSize="13dp" />

                    <Spinner
                        android:id="@+id/spinnerGender"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/bg_gray_round"
                        android:paddingLeft="5dp"
                        android:paddingTop="13dp"
                        android:paddingRight="5dp"
                        android:paddingBottom="13dp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="25dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_bold"
                    android:maxLines="1"
                    android:text="EMAIL"
                    android:textColor="@color/black"
                    android:textSize="13dp" />

                <EditText
                    android:id="@+id/email_text"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/bg_gray_round"
                    android:fontFamily="@font/poppins_bold"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:paddingLeft="25dp"
                    android:paddingRight="25dp"
                    android:text=""
                    android:textSize="14sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="25dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_bold"
                    android:maxLines="1"
                    android:text="PASSWORD"
                    android:textColor="@color/black"
                    android:textSize="13dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_gray_round">

                    <EditText
                        android:id="@+id/password_text"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/poppins_bold"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        android:paddingLeft="25dp"
                        android:paddingRight="25dp"
                        android:text=""
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/showPassword"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="5dp"
                        android:padding="12.5dp"
                        android:src="@drawable/eye_open" />

                    <ImageView
                        android:id="@+id/hidePassword"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="5dp"
                        android:padding="12.5dp"
                        android:src="@drawable/close_eye"
                        android:visibility="gone" />

                </RelativeLayout>


            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/validIdButton"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="30dp"
                android:maxWidth="240dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/bg_gray_round"
                android:ellipsize="end"
                android:letterSpacing="0.02"
                android:maxLines="1"
                android:paddingLeft="23dp"
                android:paddingRight="23dp"
                android:text="UPLOAD VALID ID"
                android:textColor="#232323"
                android:textSize="12.5dp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/bg_primary_color_round"
                android:letterSpacing="0.02"
                android:text="Sign Up"
                android:id="@+id/registerBtn"
                android:textColor="#232323"
                android:textSize="24dp"
                android:textStyle="bold" />

        </LinearLayout>

    </ScrollView>
</RelativeLayout>